@model Colibri.ViewModels.SearchViewModel
@using Colibri.Extensions

@{
    ViewData["Title"] = "Index";
}

<h2>Inserat suchen</h2>
<br />


<div class="form-row">
    <!--Anzeigen der Filtereinstellungen-->
    <div class="form-border col-2">
        <form asp-controller="Searches" asp-action="Index">

            <div class="col-10">
                <label asp-for="SearchAdvertisement" class="custom-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="SearchAdvertisement" class="form-control" />
            </div>
            <br />

            @*<div class="col-10">
                    <label asp-for="SearchCategory" class="custom-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="SearchCategory" class="form-control" />
                </div>
                <br />*@

            <div class="col-10">
                <label asp-for="SearchCategoryType" class="custom-label"></label>
            </div>
            <div class="col-10">
                @*<select asp-for="CategoryType" asp-items="@Model.CategoryTypeList.ToSelectListItem(Model.Advertisement.CategoryTypeId)" class="form-control"></select>*@
                <input asp-for="SearchCategoryType" class="form-control" />
            </div>

            <div class="col-10">
                <label asp-for="SearchCategoryGroup" class="custom-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="SearchCategoryGroup" class="form-control" />
            </div>
            <br />

            <div class="col-10">
                <label asp-for="SearchCategory" class="custom-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="SearchCategory" class="form-control" />
            </div>
            <br />

            <input type="submit" value="Suchen" class="btn btn-primary" />
        </form>


    </div>

    <!--Anzeigen der Resultate-->
    <div class="form-border">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Products.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Products.SpecialTags)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Products.CategoryGroups)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Products.CategoryTypes)
                </th>
                <th>
                    @*@Html.DisplayNameFor(m => m.Products.TypeOfAdvertisement)*@
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model.ProductsList)
            {
                //if (item.isActive == true)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.SpecialTags.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CategoryGroups.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CategoryTypes.Name)
                        </td>
                        <td>
                            @*@Html.DisplayFor(m => item.TypeOfAdvertisement)*@
                        </td>
                        <td>
                            @Html.Partial("_TableButtonPartial", item.Id)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>