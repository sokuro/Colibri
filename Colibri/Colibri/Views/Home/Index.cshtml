@model Colibri.ViewModels.HomeIndexViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <table>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = category.Id })
                </td>
            </tr>
        }
    </table>
</body>
</html>
