<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark">
            <h1 class="navbar-brand">Welcome to Colibri</h1>
            <div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
                <div class="navbar-right">
                    <vc:login-logout></vc:login-logout>
                </div>
            </div>
        </nav>
    </header>
    <main class="container">
        <aside></aside>
        <section>
            <article>
                <h2>@ViewBag.Title</h2>
                @RenderBody()
            </article>
        </section>
    </main>
    <footer class="container">
        <div class="text-center">
            @DateTime.Now.Year
        </div>
    </footer>

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
