@model Colibri.ViewModels.ProductsViewModel
@using Colibri.Extensions
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">@ViewData["ProductDetails"]</h2>

<div class="p-4 border rounded row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-1"></div>

    <!-- Image -->
    <div class="col-3">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        @if (Model.Products.Available)
        {
            <img src="~/img/SystemImages/IconApprovedgreen.png" class="availableIconImage" />
        }
    </div>

    <!-- Product Properties -->
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name">@ViewData["Name"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price">@ViewData["Price"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CategoryGroups">@ViewData["CategoryGroup"]</label>
            </div>
            <!-- using default input -->
            <div class="col-8">
                <input asp-for="Products.CategoryGroups.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CategoryTypes">@ViewData["CategoryType"]</label>
            </div>
            <!-- using default input -->
            <div class="col-8">
                <input asp-for="Products.CategoryTypes.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Description">@ViewData["Description"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Description" readonly class="form-control" />
            </div>
        </div>
        <!-- Number of Clicks -->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.NumberOfClicks">@ViewData["NumberOfClicks"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.NumberOfClicks" class="form-control" readonly />
            </div>
        </div>
        <!-- Rating -->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.NumberOfProductRates">@ViewData["NumberOfProductRates"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.NumberOfProductRates" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.ProductRating">@ViewData["ProductRating"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ProductRating" class="form-control" readonly />
            </div>
        </div>
        <!-- Application User: Product's Owner -->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.ApplicationUser">@ViewData["UserName"]</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ApplicationUserName" class="form-control" readonly />
            </div>
        </div>
        <!-- Application User: Product's Owner => Contact -->
        <div class="form-group row">
            <div class="col-4">
            </div>
            <div class="col-8">
                <a asp-area="Customer" asp-action="ContactUser" asp-controller="ApplicationUser" class="btn btn-outline-primary form-control" asp-route-id="@Model.Products.ApplicationUserId">@ViewData["ContactOwner"]</a>
            </div>
        </div>
    </div>
    <!-- Buttons -->
    <div class="form-group">
        <a asp-route-are="Admin" asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.Id">@ViewData["Edit"]</a>
        <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
    </div>
</div>