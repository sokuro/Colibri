@model Colibri.Models.ArchiveEntry
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">@ViewData["DeleteEntry"]</h2>
    </div>
</div>
<hr />

<form method="post">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label">@ViewData["Title"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryGroups.Name" class="custom-label">@ViewData["CategoryGroup"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="CategoryGroups.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryTypes.Name" class="custom-label">@ViewData["CategoryType"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="CategoryTypes.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="isOffer" class="custom-label">@ViewData["IsOffer"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="isOffer" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="TypeOfCategoryGroup" class="custom-label">@ViewData["TypeOfCategoryGroup"]</label>
                </div>
                <div class="col-4">
                    <input asp-for="TypeOfCategoryGroup" class="form-control" />
                </div>
            </div>

        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="@ViewData["Delete"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">@ViewData["Back"]</a>
        </div>
    </div>
</form>