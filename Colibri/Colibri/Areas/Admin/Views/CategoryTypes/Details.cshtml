@model Colibri.Models.CategoryTypes

<div class="row">
    <div class="col-6">
        <h2 class="text-info">@ViewData["DetailsCategoryType"]</h2>
    </div>
</div>

<br />
<hr />

<div class="form-border">
    <fieldset disabled>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="custom-label">@ViewData["Name"]</label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryGroups.Name" class="custom-label">@ViewData["CategoryGroup"]</label>
            </div>
            <div class="col-4">
                <input asp-for="CategoryGroups.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PLZ" class="custom-label">@ViewData["PLZ"]</label>
            </div>
            <div class="col-4">
                <input asp-for="PLZ" class="form-control" />
            </div>
        </div>

    </fieldset>
</div>

<br />

<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@ViewData["Edit"]</a>
    <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
</div>