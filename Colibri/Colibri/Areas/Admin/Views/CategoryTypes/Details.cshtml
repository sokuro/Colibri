@model Colibri.Models.CategoryTypes
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">@ViewData["DetailsCategoryType"]</h2>

<div class="p-4 border rounded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name">@ViewData["Name"]</label>
        </div>
        <div class="col-5">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@ViewData["Edit"]</a>
        <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
    </div>
</div>