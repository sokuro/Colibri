@model Colibri.Models.CategoryTypes
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">@ViewData["DeleteCategoryType"]</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">@ViewData["Name"]</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value=@ViewData["Delete"] />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
    </div>
</form>