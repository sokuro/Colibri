@model Colibri.Models.CategoryTypes
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">@ViewData["DeleteCategoryType"]</h2>


<form method="post">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryGroups.Name" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="CategoryGroups.Name" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Löschen" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">Zurück zur Liste</a>
        </div>
    </div>
</form>








