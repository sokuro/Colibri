@model Colibri.ViewModels.UserServicesAddToEntityViewModel
@using Colibri.Extensions
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<h2 class="text-info">@ViewData["DeleteUserService"]</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded row">
        <!-- hidden Property needed -->
        <input hidden asp-for="UserServices.Id" />

        <div class="col-1"></div>

        <!-- Image -->
        <div class="col-3">
            <img src="@Model.UserServices.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>

        <!-- Product Properties -->
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserServices.Name">@ViewData["Name"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserServices.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserServices.Price">@ViewData["Price"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserServices.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryGroups">@ViewData["CategoryGroup"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserServices.CategoryGroups.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryTypes">@ViewData["CategoryType"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserServices.CategoryTypes.Name" readonly class="form-control" />
                </div>
            </div>
            <!-- Available with a Checkbox -->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserServices.Available">@ViewData["Available"]</label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="UserServices.Available" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserServices.Description">@ViewData["Description"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserServices.Description" readonly class="form-control" />
                </div>
            </div>
        </div>
        <!-- Buttons -->
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value=@ViewData["Delete"] />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}