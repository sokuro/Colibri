@model Colibri.Models.CategoryGroups
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-6">
        <h2 class="text-info">@ViewData["CreateCategoryGroup"]</h2>
    </div>
</div>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name">@ViewData["Name"]</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <!-- using the Extension Method for DropDown -->
            <div class="col-2">
                <label asp-for="TypeOfCategoryGroup">@ViewData["TypeOfCategoryGroup"]</label>
            </div>
            <!-- using the Extension Method for DropDown -->
            <div class="col-5">
                <select asp-for="@Model.TypeOfCategoryGroup" asp-items="Html.GetEnumSelectList<CategoryGroups.ETypeOfCategoryGroup>()"></select>
            </div>
            <span asp-validation-for="TypeOfCategoryGroup" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value=@ViewData["Create"] />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}