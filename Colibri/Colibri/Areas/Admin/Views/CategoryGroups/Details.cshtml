@model Colibri.Models.CategoryGroups


<div class="row">
    <div class="col-6">
        <h2 class="text-info">@ViewData["DetailsCategoryGroup"]</h2>
    </div>
</div>

<div class="p-4 border rounded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name">@ViewData["Name"]</label>
        </div>
        <div class="col-5">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TypeOfCategoryGroup">@ViewData["TypeOfCategoryGroup"]</label>
        </div>
        <div class="col-5">
            <input asp-for="TypeOfCategoryGroup" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@ViewData["Edit"]</a>
        <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
    </div>
</div>