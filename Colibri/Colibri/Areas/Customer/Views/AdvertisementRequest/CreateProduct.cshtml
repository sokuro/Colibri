@model Colibri.ViewModels.AdvertisementViewModel
@using Colibri.Extensions

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>

<script type="text/javascript">
    $(document).ready(function () {
        getCategoryTypes();
        $("#CategoryGroup").change(function () {
            getCategoryTypes();
        });
    });

    function getCategoryTypes() {
        console.log("Begin of getCategoryTypes");
        var url = '@Url.Content("~/")' + "Customer/AdvertisementRequest/CreateProduct/GetCategory";
        console.log("Url: " + url);
        var ddlsource = '#CategoryGroup';

        $.getJSON(url, { CategoryGroupID: $(ddlsource).val() }, function (data) {

            var items = '';
            $("#CategoryTypeId2").empty();
            $.each(data, function (i, categoryType) {
                items += "<option value ='" + categoryType.value + "'>" + categoryType.text + "</option>";
            });

            $("#CategoryTypeId2").html(items);
        });
    }
</script>

<h2>@ViewData["CreateRequest"]</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Name" class="custom-label">@ViewData["Title"]</label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" class="form-control" />
            </div>
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Description" class="custom-label">@ViewData["Description"]</label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Description" class="form-control" />
            </div>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.CategoryGroupId" class="custom-label">@ViewData["CategoryGroup"]</label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Product.CategoryGroupId" asp-items="Model.CategoryGroups.ToSelectListItem(Model.Product.CategoryGroupId)" id="CategoryGroup" class="form-control"></select>
            </div>
            <span asp-validation-for="Product.CategoryGroupId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.CategoryTypeId" class="custom-label">@ViewData["CategoryType"]</label>
            </div>
            <div class="col-5">
                <select asp-for="Product.CategoryTypeId" name="CategoryTypeId" id="CategoryTypeId2" asp-items="@(new SelectList(string.Empty, "Id", "Name"))" class="form-control"></select>
            </div>
            <span asp-validation-for="Product.CategoryTypeId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Image" class="custom-label">@ViewData["Image"]</label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control">
            </div>
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Price" class="custom-label">@ViewData["Price"]</label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Price" class="form-control" />
            </div>
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.DueDateFrom" class="custom-label">@ViewData["DateFrom"]</label>
            </div>
            <div class="col-5">
                @*<input asp-for="Product.DueDateFrom" value="" type="text" id="datepicker" class="form-control" />*@
                <input asp-for="Product.DueDateFrom" id="datepicker" class="form-control" />
            </div>
            <span asp-validation-for="Product.DueDateFrom" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.DueDateTo" class="custom-label">@ViewData["DateTo"]</label>
            </div>
            <div class="col-5">
                @*<input asp-for="Product.DueDateTo" value="" type="text" id="datepicker2" class="form-control" />*@
                <input asp-for="Product.DueDateTo" id="datepicker2" class="form-control" />
            </div>
            <span asp-validation-for="Product.DueDateTo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="@ViewData["Create"]" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">@ViewData["Back"]</a>
            <a asp-controller="AdvertisementOffer" asp-action="CategoryOverview" class="btn btn-info">@ViewData["OverviewCategories"]</a>
        </div>

    </div>
</form>

