@model Colibri.ViewModels.UserServicesAddToEntityViewModel
@using Colibri.Extensions
@using Microsoft.AspNetCore.Mvc.Localization

@{
    ViewData["Title"] = "Create";
}

@inject IViewLocalizer Localizer

<h2 class="text-info">@ViewData["CreateUserService"]</h2>

<!-- for Images: enctype="multipart/form-data" -->
<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserServices.Name">@ViewData["UserServiceName"]</label>
            </div>
            <div class="col-5">
                <input asp-for="UserServices.Name" class="form-control" />
            </div>
            <span asp-validation-for="UserServices.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserServices.Price">@ViewData["Price"]</label>
            </div>
            <div class="col-5">
                <input asp-for="UserServices.Price" class="form-control" />
            </div>
            <span asp-validation-for="UserServices.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserServices.Image">@ViewData["Image"]</label>
            </div>
            <div class="col-5">
                <input type="file" name="file" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryGroups">@ViewData["CategoryGroup"]</label>
            </div>
            <!-- using the Extension Method for DropDown -->
            <div class="col-5">
                <select asp-for="@Model.UserServices.CategoryGroupId" asp-items="Model.CategoryGroups.ToSelectListItem(Model.UserServices.CategoryGroupId)"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryTypes">@ViewData["CategoryType"]</label>
            </div>
            <!-- using the Extension Method for DropDown -->
            <div class="col-5">
                <select asp-for="@Model.UserServices.CategoryTypeId" asp-items="Model.CategoryTypes.ToSelectListItem(Model.UserServices.CategoryTypeId)"></select>
            </div>
        </div>
        <!-- this Field is hidden in the Form and will be added automatically -->
        <div class="form-group row elemNotDisplay">
            <div class="col-2">
                <label asp-for="SpecialTags">@ViewData["SpecialTag"]</label>
            </div>
            <div class="col-5">
                <input type="hidden" asp-for="@Model.UserServices.SpecialTagId" value="1" readonly class="form-control" />
            </div>
        </div>
        <!-- this Field is hidden in the Form and will be added automatically -->
        <div class="form-group row elemNotDisplay">
            <div class="col-2">
                <label asp-for="UserServices.Available">@ViewData["Available"]</label>
            </div>
            <div class="col-5">
                <input type="hidden" asp-for="UserServices.Available" value="true" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserServices.Description">@ViewData["Description"]</label>
            </div>
            <div class="col-5">
                <input asp-for="UserServices.Description" class="form-control" />
            </div>
            <span asp-validation-for="UserServices.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value=@ViewData["Create"] />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
        <!-- this Field is hidden in the Form and will be added automatically -->
        <div class="form-group row elemNotDisplay">
            <div class="col-2">
                <label asp-for="UserServices.ApplicationUserId">@ViewData["UserName"]</label>
            </div>
            <div class="col-5">
                <input type="hidden" asp-for="UserServices.ApplicationUserId" value="" readonly class="form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}