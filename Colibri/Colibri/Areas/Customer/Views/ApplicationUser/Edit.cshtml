@model Colibri.Models.ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<h2 class="text-info">@ViewData["EditApplicationUser"]</h2>

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="p-4 border rounded row">

        <input hidden asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Image -->
        <div class="col-3">
            <img src="@Model.Image" class="productImage" />
            @if (Model.EmailConfirmed)
            {
                <img src="~/img/SystemImages/IconApprovedgreen.png" class="availableIconImage" />
            }
            else
            {
                <img src="~/img/SystemImages/Cute-Ball-Stop-icon.png" class="availableIconImage" />
            }
        </div>

        <!-- Application User Properties -->
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserName">@ViewData["UserName"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserName" class="form-control" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FirstName">@ViewData["FirstName"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="LastName">@ViewData["LastName"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image">@ViewData["Image"]</label>
                </div>
                <div class="col-8">
                    <input type="file" name="file" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Street">@ViewData["Street"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="Street" class="form-control" />
                </div>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CareOf">@ViewData["CareOf"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="CareOf" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Zip">@ViewData["Zip"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="Zip" class="form-control" />
                </div>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="City">@ViewData["City"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control" />
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Country">@ViewData["Country"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="Country" class="form-control" />
                </div>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNumber">@ViewData["PhoneNumber"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserRating">@ViewData["UserRating"]</label>
                </div>
                <div class="col-8">
                    <input asp-for="UserRating" class="form-control" readonly />
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value=@ViewData["Update"] />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}