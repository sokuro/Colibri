        </div>
        <div class="form-group">
            <!-- hidden Field Id to use in the Session -->
            <input hidden asp-for="Id" />
            <a asp-action="Index" class="btn btn-success">@ViewData["BackToList"]</a>
        </div>
    </div>
</form>

