@model List<Colibri.Models.UserServices>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div class="row">
    @foreach (var userService in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">
                            @ViewData["UserServiceName"]
                        </label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%;" src="@userService.Image" alt="Card Image">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313">
                                @*<b>$@ViewData["Price"]</b>*@
                                <b>$@userService.Price</b>
                            </label>
                        </div>
                        @*<a asp-action="Details" asp-controller="UserServicesHome" class="btn btn-success pull-right btn-outline-info" asp-route-id="@userService.Id">@ViewData["ViewDetails"]</a>*@
                        <a asp-action="Details" asp-controller="UserServices" class="btn btn-success pull-right btn-outline-info" asp-route-id="@userService.Id">@ViewData["ViewDetails"]</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>