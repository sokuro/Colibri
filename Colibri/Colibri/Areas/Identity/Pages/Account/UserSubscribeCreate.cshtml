@page
@using Colibri.Extensions
@using Microsoft.EntityFrameworkCore
@model UserSubscribeCreateModel
@{
    ViewData["Title"] = "Notification Choice";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-2">
                    <label asp-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.ApplicationUserId"></label>

                </div>
                <div class="col-5">
                    <input asp-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.ApplicationUserId" class="form-control"/>
                </div>
                <span asp-validation-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.ApplicationUserId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="UserSubscribeNotifications.CategoryTypeId"></label>
                <input asp-for="UserSubscribeNotifications.CategoryTypeId" type="checkbox" class="form-control" />
            </div>*@
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.CategoryTypeId"></label>
                </div>
                <!-- using the Extension Method for DropDown -->
                <div class="col-5">
                    @*<input asp-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.CategoryTypeId" class="form-control" />*@
                    <select asp-for="UserSubscribeNotificationsViewModel.ApplicationUserCategoryTypesSubscriber.CategoryTypeId" asp-items="Model.UserSubscribeNotificationsViewModel.CategoryTypes.ToSelectListItem(Model.UserSubscribeNotificationsViewModel.CategoryTypeId)" class="form-control"></select>

                </div>
                <span asp-validation-for="CategoryTypes" class="text-danger"></span>
            </div>
            
            <table class="table table-striped">
                @*@for (var i = 0; i < 5; i++)*@
                @*@foreach(var item in Model.CategoryTypes.Name)
                {*@
                    @*<input type="checkbox" name="CategoryTypeId" value="@i" />*@
                    @*<input type="checkbox" name="CategoryTypeId" value="@item" />
                    <br/>*@
                @*}*@
            </table>

            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
